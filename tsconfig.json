{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,          // Melhor prática para evitar erros de null
    "noImplicitAny": false,             // Melhor prática para evitar variáveis implícitas any
    "strictBindCallApply": false,       // Melhor prática para consistência
    "forceConsistentCasingInFileNames": true, // Evitar problemas de case-sensitive em diferentes sistemas operacionais
    "noFallthroughCasesInSwitch": true // Evitar erros em instruções switch
  }
}
